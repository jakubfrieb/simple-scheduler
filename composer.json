{
    "name": "digitalmind/simple-scheduler",
    "description": "Simple task scheduler with SQLite storage",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "symfony/process": "^5.4|^6.0",
        "crunzphp/crunz": "^3.2",
        "illuminate/console": "^8.0|^9.0|^10.0",
        "illuminate/container": "^8.0|^9.0|^10.0",
        "illuminate/cache": "^10.48"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "chmod +x bin/add-task.php",
            "chmod +x bin/run-tasks.php"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.75"
    }
}
